    "storageAccountName": {
      "type": "string",
      "maxLength": 24,
      "metadata": {
        "description": "The name of the storage account"
      }
    },
    "location": {
      "type": "string",
      "metadata": {
        "description": "The location for the storage account"
      }
    },
    "tags": {
      "type": "object",
      "defaultValue": {},
      "metadata": {
        "description": "Tags to apply to the storage account"
